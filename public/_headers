# Development-friendly caching - much shorter cache times

# No caching for HTML files (always fresh)
/*.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Short cache for media (5 minutes for development)
/media/*
  Cache-Control: public, max-age=300
/fonts/*
  Cache-Control: public, max-age=300

# Short cache for project pages (1 hour)
/project/options-institute/*
  X-Robots-Tag: all
  Cache-Control: public, max-age=3600

/project/maven-wave/*
  X-Robots-Tag: all
  Cache-Control: public, max-age=3600

/project/naked-juice/*
  X-Robots-Tag: all
  Cache-Control: public, max-age=3600

/project/collective/*
  X-Robots-Tag: all
  Cache-Control: public, max-age=3600

/project/bp/*
  X-Robots-Tag: all
  Cache-Control: public, max-age=3600

/index/*
  X-Robots-Tag: all
  Cache-Control: public, max-age=3600

/about/*
  X-Robots-Tag: all
  Cache-Control: public, max-age=3600

# Default: short cache for everything else
/*
  X-Robots-Tag: all
  Cache-Control: public, max-age=3600